@page "/fetchdata"
@using VoiceCommerceShop.Shared
@using VoiceCommerceShop.Shared.Responses
@inject HttpClient Http

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Model</th>
                <th>Color</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Brand</td>
                    <td>@forecast.Model</td>
                    <td>@forecast.Color</td>
                    <td>@forecast.Price</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<CarResponse>? forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<IEnumerable<CarResponse>>("Cars");
    }
}
